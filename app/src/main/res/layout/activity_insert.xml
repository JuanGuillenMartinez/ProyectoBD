<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.InsertActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_foto"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="8dp"
                android:alpha="@dimen/material_emphasis_high_type"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/producto" />

            <TextView
                android:id="@+id/titulo_descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="36dp"
                android:background="@drawable/first_category"
                android:fontFamily="sans-serif-medium"
                android:paddingStart="15dp"
                android:paddingTop="2dp"
                android:paddingEnd="2dp"
                android:text="@string/texto_descripcion"
                android:textAlignment="viewStart"
                android:textSize="20sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/campo_descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="36dp"
                android:ems="10"
                android:fontFamily="sans-serif-medium"
                android:inputType="textPersonName"
                android:paddingStart="15dp"
                android:paddingTop="2dp"
                android:paddingEnd="2dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/titulo_precio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="36dp"
                android:background="@drawable/first_category"
                android:fontFamily="sans-serif-medium"
                android:paddingStart="15dp"
                android:paddingTop="2dp"
                android:paddingEnd="2dp"
                android:text="@string/texto_precio"
                android:textAlignment="viewStart"
                android:textSize="20sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/campo_precio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="36dp"
                android:ems="10"
                android:fontFamily="sans-serif-medium"
                android:inputType="textPersonName"
                android:paddingStart="15dp"
                android:paddingTop="2dp"
                android:paddingEnd="2dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/titulo_existencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="36dp"
                android:background="@drawable/first_category"
                android:fontFamily="sans-serif-medium"
                android:paddingStart="15dp"
                android:paddingTop="2dp"
                android:paddingEnd="2dp"
                android:text="@string/texto_existencia"
                android:textAlignment="viewStart"
                android:textSize="20sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/campo_existencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="36dp"
                android:ems="10"
                android:fontFamily="sans-serif-medium"
                android:inputType="textPersonName"
                android:paddingStart="15dp"
                android:paddingTop="2dp"
                android:paddingEnd="2dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/titulo_codigo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginRight="36dp"
                android:background="@drawable/first_category"
                android:fontFamily="sans-serif-medium"
                android:paddingStart="15dp"
                android:paddingTop="2dp"
                android:paddingEnd="2dp"
                android:text="@string/texto_codigo"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/campo_codigo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="36dp"
                android:ems="10"
                android:fontFamily="sans-serif-medium"
                android:inputType="textPersonName"
                android:paddingStart="15dp"
                android:paddingTop="2dp"
                android:paddingEnd="2dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/titulo_codigobarra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="36dp"
                android:background="@drawable/first_category"
                android:fontFamily="sans-serif-medium"
                android:paddingStart="15dp"
                android:paddingTop="2dp"
                android:paddingEnd="2dp"
                android:text="@string/texto_codigo_barras"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/campo_codigobarra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="36dp"
                android:ems="10"
                android:fontFamily="sans-serif-medium"
                android:inputType="textPersonName"
                android:paddingStart="15dp"
                android:paddingTop="2dp"
                android:paddingEnd="2dp"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/imageButton_barras"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="36dp"
                android:background="@drawable/button_optional"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_camera_alt_black_24dp" />

            <TextView
                android:id="@+id/titulo_estado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="36dp"
                android:background="@drawable/first_category"
                android:fontFamily="sans-serif-medium"
                android:paddingStart="15dp"
                android:paddingTop="2dp"
                android:paddingEnd="2dp"
                android:text="@string/texto_estado_producto"
                android:textSize="20sp" />

            <Switch
                android:id="@+id/switch_estatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="36dp"
                android:paddingStart="15dp"
                android:paddingTop="2dp"
                android:paddingEnd="2dp"
                android:text="@string/texto_especificar"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/titulo_marca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="36dp"
                android:background="@drawable/second_category"
                android:fontFamily="sans-serif-medium"
                android:paddingStart="15dp"
                android:paddingTop="2dp"
                android:paddingEnd="2dp"
                android:text="@string/texto_marca_comercial"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/campo_marca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="36dp"
                android:ems="10"
                android:fontFamily="sans-serif-medium"
                android:inputType="textPersonName"
                android:paddingStart="15dp"
                android:paddingTop="2dp"
                android:paddingEnd="2dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/titulo_subcategoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="36dp"
                android:background="@drawable/second_category"
                android:fontFamily="sans-serif-medium"
                android:paddingStart="15dp"
                android:paddingTop="2dp"
                android:paddingEnd="2dp"
                android:text="@string/texto_subdepartamento"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/campo_subcategoria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="36dp"
                android:ems="10"
                android:fontFamily="sans-serif-medium"
                android:inputType="textPersonName"
                android:paddingStart="15dp"
                android:paddingTop="2dp"
                android:paddingEnd="2dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/titulo_unidadmedida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="36dp"
                android:background="@drawable/second_category"
                android:fontFamily="sans-serif-medium"
                android:paddingStart="15dp"
                android:paddingTop="2dp"
                android:paddingEnd="2dp"
                android:text="@string/texto_unidadmedida"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/campo_medida"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="36dp"
                android:ems="10"
                android:fontFamily="sans-serif-medium"
                android:inputType="textPersonName"
                android:paddingStart="15dp"
                android:paddingTop="2dp"
                android:paddingEnd="2dp"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn_agregar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="36dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="36dp"
                android:background="@drawable/button_update"
                android:text="@string/texto_registrar"
                android:textColor="@android:color/background_light" />

            <Button
                android:id="@+id/btn_limpiar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="36dp"
                android:layout_marginBottom="36dp"
                android:background="@drawable/button_optional"
                android:text="@string/texto_limpiar" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>